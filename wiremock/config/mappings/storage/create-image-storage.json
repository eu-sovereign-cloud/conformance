{
  "name": "create-image",
  "priority": 10,
  "request": {
    "method": "PUT",
    "urlPathPattern": "/providers/seca.storage/v1/tenants/[^/]+/images/[^/]+",
    "headers": {
      "Content-Type": {
        "equalTo": "application/json"
      },
      "Accept": {
        "equalTo": "application/json"
      },
      "Authorization": {
        "matches": "Bearer .+"
      }
    },
    "bodyPatterns": [
      {
        "matchesJsonPath": "$[?(@.spec != null && @.spec.blockStorageRef != null && @.spec.cpuArchitecture != null)]"
      }
    ]
  },
  "response": {
    "status": 201,
    "headers": {
      "Content-Type": "application/json"
    },
    "jsonBody": {
      "metadata": {
        "name": "{{request.pathSegments.[6]}}",
        "createdAt": "2025-07-22T10:15:10Z",
        "lastModifiedAt": "2025-07-22T10:15:10Z",
        "resourceVersion": 1,
        "tenant": "{{request.pathSegments.[4]}}",
        "region": "eu-central-1",
        "apiVersion": "v1",
        "kind": "image",
        "resource": "seca.storage/images/{{request.pathSegments.[6]}}",
        "verb": "put"
      },
      "spec": {
        "blockStorageRef": "{{jsonPath request.body '$.spec.blockStorageRef'}}",
        "cpuArchitecture": "{{jsonPath request.body '$.spec.cpuArchitecture'}}",
        "initializer": "{{jsonPath request.body '$.spec.initializer' or 'none'}}",
        "boot": "{{jsonPath request.body '$.spec.boot' or 'UEFI'}}"
      },
      "status": {
        "state": "creating",
        "conditions": [
          {
            "state": "creating",
            "lastTransitionAt": "2025-07-22T10:15:10Z"
          }
        ]
      },
      "labels": "{{jsonPath request.body '$.labels' fallback null}}",
      "annotations": "{{jsonPath request.body '$.annotations' fallback null}}",
      "extensions": "{{jsonPath request.body '$.extensions' fallback null}}"
    }
  }
}
